{
	"devDependencies": {
		"uglify-js": "latest",
		"rimraf": "latest",
		"json-minify": "latest",
		"shelljs": "latest",
		"zip-dir": "latest",
		"cpy-cli": "latest"
	},
	"scripts": {
		"clean": "rimraf dist && mkdir dist",

		"js": "uglifyjs src/inject.js > dist/inject.js && cpy src/main.js dist",
		"json": "cpy src/manifest.json dist",

		"copy": "node build.js copy",

		"build": "npm run clean & npm run js & npm run json & npm run copy",
		"postjs": "node build.js replaceJS",
		"postjson": "node build.js replaceJSON",
		"postbuild": "node build.js buildZip"
	}
}
