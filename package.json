{
	"devDependencies": {
		"uglify-js": "latest",
		"rimraf": "latest",
		"replace": "latest",
		"json-minify": "latest",
		"zip": "^0.4.0"
	},
	"scripts": {
			"clean": "rimraf dist/*",

			"js": "uglifyjs src/inject.js > dist/inject.js",
			"json": "json-minify src/manifest.json > dist/manifest.json",

			"build:replace": "replaceJS '\"use strict\";' '' ./dist -r  --preview",

			"copy": "",

			"build": "npm run clean & npm run js & npm run json & npm run copy",
			"postjs": "npm run build:replace",
			"postbuild": "npm run zip"
	}
}
